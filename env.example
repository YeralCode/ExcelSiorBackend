# Configuración de la aplicación
APP_NAME=ExcelSior API
APP_VERSION=1.0.0
APP_DESCRIPTION=API para procesamiento y transformación de archivos Excel y CSV

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=/tmp/excelsior.log

# Configuración de archivos
DEFAULT_ENCODING=utf-8
DEFAULT_DELIMITER=|
MAX_FILE_SIZE=104857600  # 100MB en bytes
TEMP_DIR=/tmp/excelsior

# Configuración de CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5178","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# Configuración de validación
MAX_ROWS_PER_FILE=1000000
MAX_COLUMNS_PER_FILE=100
VALIDATION_TIMEOUT=300

# Configuración de desarrollo
DEBUG=true
RELOAD=true
HOST=0.0.0.0
PORT=8000

# Configuración de producción
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Configuración de seguridad
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Configuración de base de datos (para futuras implementaciones)
# DATABASE_URL=postgresql://user:password@localhost/excelsior
# REDIS_URL=redis://localhost:6379

# Configuración de monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090

# Configuración de cache (para futuras implementaciones)
# CACHE_TTL=3600
# CACHE_MAX_SIZE=1000 